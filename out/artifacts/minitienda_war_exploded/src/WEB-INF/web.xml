<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>AnhadirACarrito</servlet-name>
        <servlet-class>minitienda.AnhadirACarritoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnhadirACarrito</servlet-name>
        <url-pattern>/anhadirACarrito</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Carrito</servlet-name>
        <servlet-class>minitienda.CarritoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Carrito</servlet-name>
        <url-pattern>/carrito</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Confirmacion</servlet-name>
        <servlet-class>minitienda.ConfirmacionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Confirmacion</servlet-name>
        <url-pattern>/confirmacionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EliminarDeCarrito</servlet-name>
        <servlet-class>minitienda.EliminarDeCarritoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EliminarDeCarrito</servlet-name>
        <url-pattern>/eliminarDeCarrito</url-pattern>
    </servlet-mapping>
</web-app>
